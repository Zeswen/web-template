{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "start": {
      "persistent": true,
      "dotEnv": [".env"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "!.next/cache/**"],
      "dotEnv": [".env"]
    },
    "check": {
      "dotEnv": [".env"]
    },
    "@zeswen/product-service#check": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dotEnv": [".env"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "dotEnv": [".env"]
    },
    "migrate": {
      "dotEnv": [".env"]
    },
    "storybook": {
      "dotEnv": [".env"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dotEnv": [".env"]
    },
    "test:dev": {
      "dotEnv": [".env"],
      "cache": false,
      "persistent": true
    }
  }
}
